<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/devrant_background"

    android:id="@+id/watch_view_stub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.skepter.devrantwear.MainActivityWear"
    tools:deviceIds="wear">

    <android.support.wearable.view.GridViewPager
        android:id="@+id/gridViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:layout_gravity="center" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBar" />

    <ImageView
        android:src="@drawable/ic_full_sad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:cropToPadding="false"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />

    <TextView
        android:text="Could not\nconnect to devRant\n(Check phone network)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center" />

</android.support.wearable.view.BoxInsetLayout>
